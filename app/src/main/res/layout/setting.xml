<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context=".Setting">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="تغيير الثيم"
        android:textSize="18sp" />

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="32dp"
        app:flexWrap="wrap"
        app:justifyContent="center">

        <LinearLayout
            android:id="@+id/defualtTheme"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="@color/white" />

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/greenTheme"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="16dp"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="@color/green" />

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="@color/greenAccent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/yellowTheme"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="@color/yellow" />

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="@color/yellowAccent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blueTheme"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="@color/cyan" />

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="@color/blue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/purbleTheme"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="@color/purple" />

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:background="@color/purpleAccent" />
        </LinearLayout>


    </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/btnDisableSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="تشغبل اصوات النقر" />

    <ImageView
        android:id="@+id/simpleImageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/btnDisableSound"
        android:src="@mipmap/ic_launcher_foreground" />

</RelativeLayout>