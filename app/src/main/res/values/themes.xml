<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BlueTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:colorBackground">@color/cyan</item>
        <item name="android:editTextBackground">@drawable/custom_input</item>


    </style>

    <style name="GreenTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/greenAccent</item>
        <item name="colorSecondary">@color/green</item>
        <item name="android:colorBackground">@color/greenAccent</item>
        <item name="android:editTextBackground">@drawable/custom_input</item>

    </style>

    <style name="YellowTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/yellowAccent</item>
        <item name="colorSecondary">@color/yellow</item>
        <item name="android:colorBackground">@color/yellowAccent</item>
        <item name="android:editTextBackground">@drawable/custom_input</item>

    </style>

    <style name="DefaultTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:editTextBackground">@drawable/custom_input</item>

    </style>

    <style name="PurpleTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purpleAccent</item>
        <item name="colorSecondary">@color/purple</item>
        <item name="android:colorBackground">@color/purpleAccent</item>
        <item name="android:editTextBackground">@drawable/custom_input</item>
        <item name="spinnerStyle">@style/Widget.App.Spinner</item>
        <item name="android:spinnerStyle">@style/Widget.App.Spinner</item>
    </style>

    <style name="Widget.App.Spinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="overlapAnchor">true</item>
        <item name="android:background">@drawable/custom_spinner</item>
    </style>
</resources>